<h1>New reservation</h1>
<%= form_with model: @reservation do |form| %>
  <div>
    <%= form.label :room_id %>
    <%= form.collection_select :room_id, Room.all, :id, :address, include_blank: true %>
  </div>
  <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>
   <div>
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>
   <%# <div> %>
    <%# <%= form.label :price %> 
    <%# <%= form.text_field :price %> 
  <%# </div> %>
   <div>
    <%= form.label :total_guests %>
    <%= form.text_field :total_guests %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end%>
